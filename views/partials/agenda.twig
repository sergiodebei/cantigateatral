<div class="cb cb--title">
    <h3 class="title">agenda</h3>
</div>

<div class="cb cb--agenda">
    <div class="agenda__group">
        {% for event in events %}
        {# {% include 'partials/project-thumb.twig' with { id: loop.index0, project : project } only %} #}
        <div class="event">
            <a class="event__visual" href="{{ event.link }}">
                {% if event.event_thumbnail %}
                    {# TODO #}
                    {# <img class="lazy" data-original="{{ event.event_thumbnail|get_timber_image_src('event') }}"/>
                    <noscript><img {{ event.event_thumbnail|get_timber_image_responsive('event') }}/></noscript> #}
                {% endif %}
            </a>
            <div class="event__information">
                <div class="event__information__details">
                    <span class="event__information__details__date">{{ fn('nlDate', event.event_date|date('j F Y') ) }}</span>
                    <a href="{{ event.link }}"><h3 class="event__information__details__title">{{ event.title }}</h3></a>
                </div>        
                <div class="event__information__link">
                    <a href="{{ event.link }}" class="button">{{ readmore }}</a>
                </div>    
            </div>      
        </div>
        {% endfor %}
    </div>
</div>
