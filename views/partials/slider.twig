<div class="cb cb--imageslider">
{% if block.images|length == 1 %}
    {% if block.images[0] %}<img src="{{ TimberImage(block.images[0].image.url).src }}">{% endif %}
        {% else %}
        <button type="button" class="control prev">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
        </button>
        <button type="button" class="control next">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
        </button>
        <div class="slider">
            {% for image in block.images %}
                {% if image.image %}
                    <img src="{{ TimberImage(image.image.url).src }}">
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</div> 